{
  "swagger": "2.0",
  "info": {
    "description": "API /v1",
    "version": "1.0.0",
    "title": "Chess BACKEND",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "krystian.fluder@outlook.com"
    }
  },
  "host": "localhost:8080",
  "basePath": "/v1",
  "tags": [
    {
      "name": "auth",
      "description": "Authentication and authorization"
    },
    {
      "name": "newsletter",
      "description": "newsletter"
    },
    {
      "name": "profile",
      "description": "profile"
    }
  ],
  "schemes": ["http"],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["auth"],
        "summary": "Sign in",
        "description": "Login",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Add user to db",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User logged in successfully"
          },
          "400": {
            "description": "Email or password is incorrect"
          },
          "422": {
            "description": "Validation failed, entered data is incorrect"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": ["auth"],
        "summary": "Sign up",
        "description": "Register",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User created in successfully"
          },
          "400": {
            "description": "Email does not exist"
          },
          "422": {
            "description": "Validation failed, entered data is incorrect || Email exists"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["auth"],
        "summary": "Logout",
        "description": "Logout",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User logged out successfully"
          },
          "400": {
            "description": "The token must be provided"
          },
          "401": {
            "description": "The token is invalid or has expired || Refresh token does not exist"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/auth/logout-all": {
      "post": {
        "tags": ["auth"],
        "summary": "Logout All",
        "description": "Logout account from all devices",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User logged out successfully"
          },
          "400": {
            "description": "The token must be provided"
          },
          "401": {
            "description": "The token is invalid or has expired"
          },
          "404": {
            "description": "Not found refresh tokens"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/auth/reset": {
      "post": {
        "tags": ["auth"],
        "summary": "Reset",
        "description": "Reset account",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Code for changing the password has been sent to the email"
          },
          "400": {
            "description": "Email does not exist"
          },
          "422": {
            "description": "Validation failed, entered data is incorrect"
          }
        }
      }
    },
    "/auth/change-password": {
      "post": {
        "tags": ["auth"],
        "summary": "Change password",
        "description": "Change password",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string"
                },
                "password": {
                  "type": "string",
                  "format": "password"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Password changed successfully"
          },
          "401": {
            "description": "The code is invalid or expired"
          },
          "422": {
            "description": "Validation failed, entered data is incorrect"
          }
        }
      }
    },
    "/auth/status": {
      "get": {
        "tags": ["auth"],
        "summary": "Status",
        "description": "List of logged in devices",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "List of logged in devices"
          },
          "400": {
            "description": "The token must be provided"
          },
          "401": {
            "description": "The token is invalid or has expired"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/auth/refresh-token": {
      "post": {
        "tags": ["auth"],
        "summary": "Refresh token",
        "description": "Logout account from all devices",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string",
                  "format": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User logged out successfully"
          },
          "401": {
            "description": "Incorrect refresh token or not provided"
          }
        }
      }
    },
    "/newsletter": {
      "post": {
        "tags": ["newsletter"],
        "summary": "newsletter",
        "description": "newsletter",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "from": {
                  "type": "string",
                  "format": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Email saved"
          },
          "422": {
            "description": "Validation failed, entered data is incorrect"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/profile": {
      "get": {
        "tags": ["profile"],
        "summary": "Status",
        "description": "Fetched profile",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Fetched profile"
          },
          "400": {
            "description": "The token must be provided"
          },
          "401": {
            "description": "The token is invalid or has expired"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Value: Bearer token"
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "password": {
          "type": "string",
          "format": "password",
          "minLength": 8
        }
      },
      "xml": {
        "name": "User"
      }
    }
  }
}
